{% extends 'layout/mobile' %}

{% block header %}
    <h1>#HCSocial</h1>
{% endblock %}

{% block content %}
    <form method="post" action="/users/login" id="form-login">
        <img src="/public/img/hcsocial.png" class="login-img">
        <h1>Bienvenue sur #HCSocial</h1>
        <h2>Connexion</h2>
        <input type="text" name="username" placeholder="Nom d'utilisateur">
        <input type="password" name="password" placeholder="Mot de passe">
        <button type="submit">Connexion</button>
        <p>Pas encore inscrit ? <a id="signin">C'est ici !</a></p>
    </form>
{% endblock %}

{% block js %}
    {{ helpers.assets.js('mobile/guest') }}
{% endblock %}